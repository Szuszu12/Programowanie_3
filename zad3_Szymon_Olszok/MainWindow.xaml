<Window x:Class="zad3_Szymon_Olszok.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zad3_Szymon_Olszok"
        mc:Ignorable="d"
        Title="Battleship Game" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Text="Twoje statki"/>
        <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Text="Plansza przeciwnika"/>

        <Button Name="PlaceShips" Content="Rozmieść statki" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10"/>

        <Button Name="ResetGame" Content="Zresetuj grę" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" />
    </Grid>
</Window>