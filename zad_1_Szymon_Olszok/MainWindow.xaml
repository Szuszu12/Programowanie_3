<Window x:Class="zad_1_Szymon_Olszok.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zad_1_Szymon_Olszok"
        mc:Ignorable="d"
        Title="Lista Studentów" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="dataGridStudent" Margin="-4,0,4,0">

        </DataGrid>

        <Button Click="Button_Click_Add" Grid.Row="1" Content="Dodaj"/>
        <Button Grid.Row="2" Content="Zapisz do pliku" Click="Button_Click_Save"/>
        <Button Grid.Row="3" Content="Wczytaj z pliku" Click="Button_Click_Read"/>
    </Grid>
</Window>